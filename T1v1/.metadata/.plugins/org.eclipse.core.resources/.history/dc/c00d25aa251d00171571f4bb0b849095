import java.io.*;
import java.net.*;

public class Produtor {
	public static void main(String args[]){
		while (true) {
			DatagramSocket socket = new DatagramSocket(2020); // criação do endpoint na porta 2020
			byte[] dado = new byte[50000];
			DatagramPacket pacoteRecebido = new DatagramPacket(dado, dado.length);
			socket.receive(pacoteRecebido);
			ProxyCons pc = new ProxyConsumidor( pacoteRecebido.getAddress(),
			pacoteRecebido.getPort() );
			pc.start();
			}		
	}
}

